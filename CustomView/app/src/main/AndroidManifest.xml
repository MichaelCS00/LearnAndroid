<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michaelcs.customview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MeasureViewActivity" />
        <activity android:name=".Activities.MyTextViewActivity" />
        <activity android:name=".Activities.MyTextViewSecActivity" />
        <activity android:name=".Activities.TopBarActivity" />
        <activity android:name=".Activities.HiddenViewActivity"></activity>
    </application>

</manifest>